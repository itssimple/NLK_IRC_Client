{
	"compilerOptions": {
		"outDir": "./public/dist/",
		"sourceMap": true,
		"strictNullChecks": true,
		"module": "es6",
		"jsx": "react",
		"target": "es6",
		"allowJs": true,
		"moduleResolution": "node",
		"skipDefaultLibCheck": true,
		"baseUrl": "."
	},
	"include": ["./src/**/*.tsx", "./src/**/*.ts"],
	"exclude": ["node_modules"]
}
